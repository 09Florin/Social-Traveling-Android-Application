<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ScrollViewCount">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
    <!-- Question 1: -->
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When you plan a holiday trip, you are setting yourself for:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/checkbox1_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relax and comfort" />

        <CheckBox
            android:id="@+id/checkbox1_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hikes and camping" />

        <CheckBox
            android:id="@+id/checkbox1_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City exploration and social vibing" />

        <CheckBox
            android:id="@+id/checkbox1_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sightseeing and photoshooting" />

        <CheckBox
            android:id="@+id/checkbox1_option5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historic and cultural enviorenment" />

    <!-- Question 2: -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your ideal way of traveling when visiting a place?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/checkbox2_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By myself in my own or rented car with good music" />

        <CheckBox
            android:id="@+id/checkbox2_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exploring everything by walking or biking, taking my time" />

        <CheckBox
            android:id="@+id/checkbox2_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Together with a guide at my own pace" />

        <CheckBox
            android:id="@+id/checkbox2_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public transportation to imerse myself in local culture" />

        <CheckBox
            android:id="@+id/checkbox2_option5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By a planned tour and respecting the schedule" />

        <!-- Question 3: -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What do you understand by 'famous place'?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/checkbox3_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A place I've seen many times in media" />

        <CheckBox
            android:id="@+id/checkbox3_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A place with an important cultural role" />

        <CheckBox
            android:id="@+id/checkbox3_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A location with tons of visitors over the year" />

        <CheckBox
            android:id="@+id/checkbox3_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A national attraction" />

        <CheckBox
            android:id="@+id/checkbox3_option5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A place with historical assets" />

        <!-- Question 4: -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When you hear the word 'attraction' what comes up first in your mind?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historical monument" />

            <RadioButton
                android:id="@+id/radioButton4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nature-born structure" />

            <RadioButton
                android:id="@+id/radioButton4_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City's most beautiful or important place" />

            <RadioButton
                android:id="@+id/radioButton4_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A traditional and cultural source" />

            <RadioButton
                android:id="@+id/radioButton4_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Architectural Marvels" />
        </RadioGroup>

        <!-- Question 5: -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many famous places did you visit in your lifetime?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 - 3" />

            <RadioButton
                android:id="@+id/radioButton5_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 - 10" />

            <RadioButton
                android:id="@+id/radioButton5_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 - 15" />

            <RadioButton
                android:id="@+id/radioButton5_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 - 25" />

            <RadioButton
                android:id="@+id/radioButton5_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25+ " />
        </RadioGroup>

        <!-- Question 6: -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out of all of these, what would be the place you would visit right now if possible?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton6_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yellowstone national park" />

            <RadioButton
                android:id="@+id/radioButton6_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Louvre" />

            <RadioButton
                android:id="@+id/radioButton6_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Great Wall of China" />

            <RadioButton
                android:id="@+id/radioButton6_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edinburgh as a whole" />

            <RadioButton
                android:id="@+id/radioButton6_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disneyland Paris" />
        </RadioGroup>

        <!-- Question 7: -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out of all of these, what seems for you the most obscure or strange place you would still want to visit?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton7_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thermopylae, Greece" />

            <RadioButton
                android:id="@+id/radioButton7_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tokyo Tower" />

            <RadioButton
                android:id="@+id/radioButton7_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socotra Island, Yemen" />

            <RadioButton
                android:id="@+id/radioButton7_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amy Winehouse Statue, London" />

            <RadioButton
                android:id="@+id/radioButton7_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red District Amsterdam" />
        </RadioGroup>

        <Button
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_gravity="center"
            android:background="@color/status_bar_color"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>